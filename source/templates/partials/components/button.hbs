{{!--
  Button

  @param {Array} [modifiers] Style modifiers, like "secondary" or "small"
  @param {Boolean} [disabled] Whether or not the button is disabled
  @param {String|Html} content The button content
--}}
<button class="button {{#each modifiers}}button-{{this}}{{/each}}"{{#if disabled}} disabled{{/if}}>
  {{{this.content}}}
</button>
